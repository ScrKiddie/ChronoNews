{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2022",
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "useDefineForClassFields": true,
        "moduleDetection": "force",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
